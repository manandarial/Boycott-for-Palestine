{
  "manifest_version": 3,
  "name": "Boycott for Palestine",
  "version": "0.1.0",
  "description": "inform, not force â€” users decide what aligns with their values.",
  "permissions": ["storage"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["boycott_list.js", "contentScript.js"],
      "css": ["alert.css"],
      "run_at": "document_start"
    }
  ]
  ,
  "web_accessible_resources": [
    {
      "resources": ["boycott_list.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
